<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionMenuTextColor">#000000</item>
        <item name="android:textColorPrimary">#000000</item>
    </style>

    <style name="MyApp.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- THIS is where you can color the arrow! -->
        <item name="colorControlNormal">#000000</item>
    </style>

    <style name="list_item.title" parent="Base.TextAppearance.AppCompat.Title">

    </style>

    <style name="list_item.short_desc" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/noteListDescTextColor</item>
    </style>

    <style name="list_item.time_stamp" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/noteListTimestampTextColor</item>
    </style>

    <style name="navigation.label.deselected" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#DDDDDD</item>
    </style>

    <style name="navigation.label.selected" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/navigationFilterSelectedIconColor</item>
    </style>

</resources>
